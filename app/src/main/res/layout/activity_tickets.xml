<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ticketsfon"
    android:padding="16dp">

    <TextView
        android:id="@+id/ticketsInfoText"
        android:layout_width="wrap_content"
        android:layout_height="278dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="24dp"
        android:text="Официальные билеты на Олимпийские игры 2024 года можно приобрести на сайте Олимпийских игр."
        android:textColor="@color/white"
        android:textSize="28sp" />

    <Button
        android:id="@+id/buyTicketsButton"
        android:layout_width="212dp"
        android:layout_height="108dp"
        android:layout_below="@id/ticketsInfoText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="-126dp"
        android:layout_marginEnd="104dp"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:text="Купить билеты"
        android:textColor="#000000"
        android:textColorHighlight="@color/black"
        android:textSize="25sp" />
</RelativeLayout>
